<%= link_to('Logout', destroy_user_session_path, method: :delete) %>    
<% if @posts == [] %>

    <p>Nothing here</p>
<% else %>
    <% @posts.each do |post| %>
       <p>Username
	     <% if !post.userparam.nil? %>
       	<%= image_tag post.userparam.avatar.url(:small) %>
	     <% end %>
       	<b><%= post.userparam.Login %></b> write: <br />
       <b><%= post.userparam.score %></b><br />
       <p><%= link_to "Read More", post_path(post.id) %></p>
    <% end %>
<% end %>